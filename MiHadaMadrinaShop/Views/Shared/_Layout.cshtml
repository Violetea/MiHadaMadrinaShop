@using Microsoft.AspNet.Identity
@using MiHadaMadrinaShop.Models
@inject MiHadaMadrinaHandMadeDBContext _context


<!DOCTYPE html>
<html lang="es-es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no" />
    <meta name="keywords" content="Scrap, Scrapbooking, Papeler&iacute;a, Regalos, Bebes, &Aacute;lbum, Decoraci&oacute;n" />
    <meta name="description" content="Tienda Online venta de articulos de scrapbooking" />
    <meta name="robots" content="index,nofollow" />
    <meta name="author" content="Andrea Lamus Prada" />
    <meta name="author" content="Mar&iacute;a Estefan&iacute;a Mart&iacute;nez Ayala" />
    <meta name="copyright" content="(C) DevFAndy - 2023" />
    <title>@ViewData["Title"] - Mi Hada Madrina Hand Made</title>
    @*Bootstrap CSS*@
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    @*Bootstrap icons*@
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />

    @*Fontawesome icons*@
    <link rel="stylesheet" href="~/fontawesome/css/all.css" />
    <link rel="stylesheet" href="~/fontawesome/css/fontawesome.css" />
    @*Core theme CSS (includes Bootstrap)*@
    <link rel="stylesheet" href="~/css/styles.css" />
  
    @*Estilos p&aacute;ginas de registro y login*@
    <link rel="stylesheet" href="~/css/auth.css" />
    @*Estilos que sobre escribe los colores de bootstrap*@
    <link rel="stylesheet" href="~/css/core.css" />
    <link rel="stylesheet" href="~/css/theme-default.css" />
    @*Estilos generales*@
    <link rel="stylesheet" href="~/css/estilos.css" />
</head>
<body>

    @* Navigation Start*@
    <nav class="navbar navbar-expand-lg navbar-light bg-light sticky-top">
        <div class="container px-4 px-lg-5">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Mi Hada Madrina</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0 ms-lg-4">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" asp-area="" asp-controller="Home" asp-action="Index"><i class="fas fa-home"></i> Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Public" asp-controller="Productos" asp-action="Index">Tienda</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Public" asp-controller="Contact" asp-action="Index">Contacto</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" id="navbarDropdown" role="button" data-bs-toggle="dropdown"
                           aria-expanded="false">Categorías</a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            @foreach (var categoria in _context.Categorias)
                            {
                                <li><a class="dropdown-item" asp-area="Public" asp-controller="Productos" asp-action="Index" asp-route-idCategoria="@categoria.IdCategoria">@categoria.Categoria1</a></li>
                            }
                        </ul>
                    </li>
                </ul>
                <partial name="_LoginPartial" />
                <partial name="_MenuPartial" />
            </div>
        </div>
    </nav>
    @* Navigation End *@

    <div class="contenedor mb-5">
        <main role="main" class="pb-2">
            @RenderBody()
        </main>
    </div>

    <partial name="_CookieConsentPartial" />
    <partial name="_FooterPartial" />

   
    @*jQuery first, then Bootstrap JS*@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/popper/popper.js"></script>
   @* <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>*@
    @* Bootstrap core JS *@
     <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
    @*<partial name="_ValidationScriptsPartial" />*@

</body>
</html>
