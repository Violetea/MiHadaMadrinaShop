@page
@model MiHadaMadrinaShop.Areas.Identity.Pages.Account.Manage.Direcciones.IndexModel
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "Lista de direcciones";
    Layout = "~/Areas/Identity/Pages/Account/Manage/_Layout.cshtml";
    ViewData["ActivePage"] = ManageNavPages.Direcciones;
}

<div class="container py-5 d-flex flex-column min-vh-100">

    <div class="row">
        <div class="col mt-4 d-flex justify-content-between align-items-center">
            <h1 class="font-weight-bold font-italic">Lista de direcciones</h1>
            <a class="btn btn-primary" asp-page="CreateDirecciones">
                <i class="fas fa-plus"></i><span>&nbsp;Nuevo</span>
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-12 text-center">
            <div class="table-responsive">
                <table class="table table-hover border">
                    <thead class="thead-color">
                        <tr class="align-self-center">
                            <th class="py-3 text-center" scope="col">
                                CP
                            </th>
                            <th class="py-3 text-center" scope="col">
                                DIRECCI&Oacute;N
                            </th>
                            <th class="py-3 text-center" scope="col">
                                @Html.DisplayNameFor(model => model.Direccione[0].Localidad)
                            </th>
                            <th class="py-3 text-center" scope="col">
                                PA&Iacute;S
                            </th>
                            <th class="py-3 text-center" scope="col">
                                @Html.DisplayNameFor(model => model.Direccione[0].Provincia)
                            </th>
                            <th class="py-3 text-center" scope="col">
                                Direcci&oacute;n de facturaci&oacute;n
                            </th>
                            <th class="py-3 text-center" scope="col">
                                Direcci&oacute;n de domicilio
                            </th>

                            <th class="py-3 text-center" scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Direccione)
                        {
                            <tr>
                                <td class="pt-3 text-center">
                                    @Html.DisplayFor(modelItem => item.CodPostal)
                                </td>
                                <td class="pt-3 text-center">
                                    @Html.DisplayFor(modelItem => item.Direccion)
                                </td>
                                <td class="pt-3 text-center">
                                    @Html.DisplayFor(modelItem => item.Localidad)
                                </td>
                                <td class="pt-3 text-center">
                                    @Html.DisplayFor(modelItem => item.Pais)
                                </td>
                                <td class="pt-3 text-center">
                                    @Html.DisplayFor(modelItem => item.Provincia)
                                </td>
                                <td class="pt-3 text-center">
                                    @Html.DisplayFor(modelItem => item.EsFacturacion)
                                </td>
                                <td class="pt-3 text-center">
                                    @Html.DisplayFor(modelItem => item.EsDomicilio)
                                </td>

                                <td class="pt-3 text-center">
                                    <div class="d-flex justify-content-between">
                                        <a class="btn btn-warning opacity-50" asp-page="./EditDirecciones" asp-route-id="@item.IdDireccion"><i class="fas fa-edit"></i></a>
                                        <a class="btn btn-danger opacity-75 ms-1" asp-page="./DeleteDirecciones" asp-route-id="@item.IdDireccion"><i class="fas fa-trash"></i></a>
                                    </div>
                                    @* <a asp-page="./EditDirecciones" asp-route-id="@item.IdDireccion">Editar</a> |
                                <a asp-page="./DeleteDirecciones" asp-route-id="@item.IdDireccion">Eliminar</a>*@
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>