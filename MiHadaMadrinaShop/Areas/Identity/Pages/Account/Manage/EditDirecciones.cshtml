@page
@model MiHadaMadrinaShop.Areas.Identity.Pages.Account.Manage.Direcciones.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Identity/Pages/Account/Manage/_Layout.cshtml";
}

<h1>Direcciones</h1>

<h4>Editar direcci&oacute;n</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Direccione.IdDireccion" />
            <div class="form-group">
                <label asp-for="Direccione.CodPostal" class="control-label"></label>
                <input asp-for="Direccione.CodPostal" class="form-control" />
                <span asp-validation-for="Direccione.CodPostal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Direccione.Direccion" class="control-label"></label>
                <input asp-for="Direccione.Direccion" class="form-control" maxlength="250" />
                <span asp-validation-for="Direccione.Direccion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Direccione.Localidad" class="control-label"></label>
                <input asp-for="Direccione.Localidad" class="form-control" maxlength="40" />
                <span asp-validation-for="Direccione.Localidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Direccione.Pais" class="control-label"></label>
                <input asp-for="Direccione.Pais" class="form-control" maxlength="40"  />
                <span asp-validation-for="Direccione.Pais" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Direccione.Provincia" class="control-label"></label>
                <input asp-for="Direccione.Provincia" class="form-control" maxlength="50" />
                <span asp-validation-for="Direccione.Provincia" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Direccione.EsFacturacion" /> Direcci&oacute;n de facturaci&oacute;n
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Direccione.EsDomicilio" /> Direcci&oacute;n de domicilio
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./IndexDirecciones">Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
