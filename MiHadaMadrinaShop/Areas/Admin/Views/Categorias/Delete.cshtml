@model MiHadaMadrinaShop.Models.Categoria

@{
    ViewData["Title"] = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Eliminar</h1>

<h3>¿Est&aacute;s seguro de querer eliminar esta categoría?</h3>
<div>
    <hr />
    <dl class="row">
       <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Categoria1)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Categoria1)
