@model IEnumerable<MiHadaMadrinaShop.Models.Categoria>

@{
    ViewData["Title"] = "Lista de categorías";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container py-5 d-flex flex-column min-vh-100">
    <ol class="breadcrumb mt-4 bg-transparent">
        <li><a asp-area="Admin" asp-controller="Pedidos" asp-action="Index" class="text-black-50 text-decoration-none">Dashboard</a><i class="fas fa-angle-right text-black-50 px-2"></i></li>
        <li><a asp-area="Admin" asp-controller="Categorias" asp-action="Index" class="text-dark text-decoration-none active">Categor&iacute;a</a></li>
    </ol>
    <hr class="d-block d-md-none" />
    <div class="row">
        <div class="col mt-4 d-flex justify-content-between align-items-center">
            <h1 class="font-weight-bold font-italic">Lista de categor&iacute;as</h1>
            <a class="btn btn-primary" asp-action="Create">
                <i class="fas fa-plus"></i><span>&nbsp;Nuevo</span></a>
        </div>
    </div>

    <div class="row">
        <div class="col-12 text-center">
            <div class="table-responsive">
                <table class="table table-hover border">
                    <thead class="thead-color">
                        <tr class="align-self-center">
                            <th class="py-3 text-center" scope="col">
                                @Html.DisplayNameFor(model => model.Categoria1)
                            </th>
                            <th class="py-3 text-center" scope="col">
                                @Html.DisplayNameFor(model => model.EsActivo)
                            </th>
                            <th class="py-3 text-center" scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="pt-3 text-center">
                                    @Html.DisplayFor(modelItem => item.Categoria1)
                                </td>
                                <td class="pt-3 text-center">
                                    @Html.DisplayFor(modelItem => item.EsActivo)
                                </td>
                                <td class="pt-3 text-center">
                                    <a class="btn btn-warning mx-auto opacity-50" asp-action="Edit" asp-route-id="@item.IdCategoria"><i class="fas fa-edit"></i></a>
                                    <a class="btn btn-danger mx-auto" asp-action="Delete" asp-route-id="@item.IdCategoria"><i class="fas fa-trash"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div> 