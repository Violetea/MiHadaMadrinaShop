@model IEnumerable<MiHadaMadrinaShop.Models.Factura>

@{
    ViewData["Title"] = "Lista de facturas";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Facturas</h1>

<div class="container py-5 d-flex flex-column min-vh-100">
    <ol class="breadcrumb mt-4 bg-transparent">
        <li><a asp-area="Admin" asp-controller="Pedidos" asp-action="Index" class="text-black-50 text-decoration-none">Dashboard</a><i class="fas fa-angle-right text-black-50 px-2"></i></li>
        <li><a asp-area="Admin" asp-controller="FormasDePagos" asp-action="Index" class="text-dark text-decoration-none active">Factura</a></li>
    </ol>
    <hr class="d-block d-md-none" />
    <div class="row">
        <div class="col mt-4 d-flex justify-content-between align-items-center">
            <h1 class="font-weight-bold font-italic">Lista de facturas</h1>
            <a class="btn btn-primary" asp-action="Create">
                <i class="fas fa-plus"></i><span>&nbsp;Nuevo</span>
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-12 text-center">
            <div class="table-responsive">
                <table class="table table-hover border">
                    <thead class="thead-color">
                        <tr class="align-self-center">
                            <th class="py-3 text-center" scope="col">
                                N&uacute;mero de factura
                            </th>
                            <th class="py-3 text-center" scope="col">
                                N&uacute;mero de pedido
                            </th>
                            <th class="py-3 text-center" scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.OrderBy(q => q.IdFactura))
                        {
                            <tr>
                                <td class="pt-3 text-center">
                                    @Html.DisplayFor(modelItem => item.IdFactura)
                                </td>
                                <td class="pt-3 text-center">
                                    @Html.DisplayFor(modelItem => item.IdPedido)
                                </td>
                                <td class="pt-3 text-center">
                                    <a asp-area="Public" asp-controller="ImprimirFactura" asp-action="ImprimirFactura" asp-route-id="@item.IdPedido" class="btn btn-primary"><i class="fas fa-print"></i> Imprimir factura</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
