@model MiHadaMadrinaShop.Models.ViewModels.EditarRolViewModel

@{
    ViewData["Title"] = "Editar rol";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container py-5 d-flex flex-column min-vh-100">
    <div class="row">
        <div class="col mt-4">
            <h1 class="font-weight-bold font-italic">Roles</h1>
        </div>
    </div>
    <ol class="breadcrumb mb-4 bg-transparent">
        <li><a asp-area="Admin" asp-controller="Pedidos" asp-action="Index" class="text-black-50 text-decoration-none">Dashboard</a><i class="fas fa-angle-right text-black-50 px-2"></i></li>
        <li><a asp-area="Admin" asp-controller="Roles" asp-action="Index" class="text-black-50 text-decoration-none">Roles</a><i class="fas fa-angle-right text-black-50 px-2"></i></li>
        <li><a asp-area="Admin" asp-controller="Roles" asp-action="Edit" class="text-dark text-decoration-none active">Editar</a></li>
    </ol>
    <hr class="d-block d-md-none" />

    <div class="row">
        <div class="col-12 col-md-6 align-items-center">
            <div class="card d-flex justify-content-center p-4">
                <div class="card-header">
                    <h1 class="font-weight-bold font-italic">Editar rol</h1>
                </div>
                <form asp-action="Edit" method="post">
                    <div class="card-body py-0">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group mb-3">
                            <label asp-for="RolNombre" class="control-label">Nombre del rol</label>
                            <input asp-for="RolNombre" class="form-control" />
                            <span asp-validation-for="RolNombre" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="form-group justify-content-between" role="group" aria-label="Botones">
                            <a asp-action="Index" class="btn btn-secondary w-auto mb-1"><i class="fas fa-arrow-left"></i> Volver</a>&nbsp;
                            <button type="submit" class="btn btn-primary w-auto mb-1"><i class="fas fa-save"></i> Guardar</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="col-8 col-md-4 align-items-center">
            <img src="~/img/illustrations/undraw_my_documents_re_13dc.svg" alt="imagen de edici&oacute;n" class="imagen-width img-fluid rounded mx-auto" />
        </div>
        <div class="col-12 col-md-6 align-items-center">
            <div class="card d-flex justify-content-center p-4">
                <div class="card-header">
                    <h1 class="font-weight-bold font-italic">Usuarios en este rol</h1>
                </div>
                <div class="card-body py-0">
                    @if (Model.Usuarios.Any())
                    {
                        foreach (var user in Model.Usuarios)
                        {
                            <h5 class="card-title">
                                @user
                            </h5>
                        }
                    }
                    else
                    {
                        <h5 class="card-title">
                            El rol no tiene asignado ning&uacute;n usuario
                        </h5>
                    }
                </div>
                <div class="card-footer">
                    <a asp-controller="Roles" asp-action="EditarUsuarioRol" asp-route-rolId="@Model.Id" class="btn btn-primary justify-content-center flex-fill"><i class="fas fa-user"></i> A&ntilde;adir o eliminar usuario</a>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
